# Frontend Environment Variables
VITE_API_URL=https://api.yourdomain.com
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# HTTPS Configuration
VITE_HTTPS_KEY=./certs/localhost-key.pem
VITE_HTTPS_CERT=./certs/localhost.pem

# Security Settings
REACT_APP_ENABLE_CSP=true
REACT_APP_SECURE_COOKIES=true
REACT_APP_SESSION_TIMEOUT=1800
REACT_APP_RATE_LIMIT=100

# Feature Flags
REACT_APP_ENABLE_2FA=true
REACT_APP_ENABLE_PASSWORD_STRENGTH=true

# Content Security Policy
REACT_APP_CSP_CONNECT_SRC='self' https://api.yourdomain.com
REACT_APP_CSP_IMG_SRC='self' data: https:
REACT_APP_CSP_SCRIPT_SRC='self' 'unsafe-inline'
REACT_APP_CSP_STYLE_SRC='self' 'unsafe-inline'
